<DayOfWeekApp>:
    BoxLayout:
        orientation: "vertical"
        padding: 50
        canvas.before:
            Color:
                rgb: 0.2, 0.2, 0.2  # Set background color (dark blue)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: root.day_text
            font_size: 32
            color: 1, 1, 0  # Set text color (yellow)
        Label:
            text: root.year_text
            font_size: 24
            color: 1, 0.5, 0  # Set text color (orange)
        Label:
            text: root.calendar_text
            font_size: 24
            color: 0, 1, 0  # Set text color (green)